<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite seu Salário (R$)"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/Percentual"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="73dp"
        tools:text="Qual será o percentual?" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="317dp" />

    <RadioButton
        android:id="@+id/porcentagem 40%"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="123dp"
        tools:text="40%" />

    <RadioButton
        android:id="@+id/porcentagem 45%"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="186dp"
        tools:text="45%" />

    <RadioButton
        android:id="@+id/porcentagem 50%"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="252dp"
        tools:text="50%" />

    <Button
        android:id="@+id/MostrarSalario"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="339dp"
        tools:text="Mostrar novo Salário" />

</android.support.constraint.ConstraintLayout>